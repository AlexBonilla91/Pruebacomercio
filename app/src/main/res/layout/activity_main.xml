<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/presentacion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/ofertasmes"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:foregroundGravity="center_vertical|center_horizontal"
                app:srcCompat="@android:drawable/ic_dialog_info" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ropauno"
                        android:layout_width="125dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/btn_star_big_on" />

                    <ImageButton
                        android:id="@+id/calzadouno"
                        android:layout_width="125dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_dialog_alert" />

                    <ImageButton
                        android:id="@+id/tecnouno"
                        android:layout_width="125dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_lock_idle_low_battery" />

                    <ImageButton
                        android:id="@+id/hogaruno"
                        android:layout_width="125dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        tools:srcCompat="@android:drawable/ic_input_add" />

                    <ImageButton
                        android:id="@+id/autouno"
                        android:layout_width="125dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/btn_dialog" />

                    <ImageButton
                        android:id="@+id/juguetesuno"
                        android:layout_width="125dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/btn_dialog" />

                    <ImageButton
                        android:id="@+id/deportesuno"
                        android:layout_width="125dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/btn_dialog" />

                    <ImageButton
                        android:id="@+id/bellezauno"
                        android:layout_width="125dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/btn_dialog" />

                    <ImageButton
                        android:id="@+id/ferreteriauno"
                        android:layout_width="125dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/btn_dialog" />
                </LinearLayout>
            </HorizontalScrollView>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        app:srcCompat="@android:drawable/ic_btn_speak_now" />

                    <ImageButton
                        android:id="@+id/imageButton10"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        app:srcCompat="@android:drawable/ic_lock_lock" />

                    <ImageButton
                        android:id="@+id/imageButton11"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        app:srcCompat="@android:drawable/ic_popup_disk_full" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageButton8"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        app:srcCompat="@android:drawable/ic_menu_call" />

                    <ImageButton
                        android:id="@+id/imageButton12"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        app:srcCompat="@android:drawable/ic_lock_idle_charging" />

                    <ImageButton
                        android:id="@+id/imageButton13"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        app:srcCompat="@android:drawable/presence_audio_busy" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageButton9"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        app:srcCompat="@android:drawable/ic_input_get" />

                    <ImageButton
                        android:id="@+id/imageButton14"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

                    <ImageButton
                        android:id="@+id/imageButton15"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        app:srcCompat="@android:drawable/presence_video_away" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>